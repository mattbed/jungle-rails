<header class="page-header">
  <h1>Login</h1>
</header>

<div class="row">
  <div class="col-sm-6 col-sm-offset-1">
    <%= form_tag '/login' do %>
      
      <div class="form-group">
        <h5><strong>Email:</strong></h5>
        <%= text_field_tag :email %>
      </div>

      <div class="form-group">
        <h5><strong>Password:</strong></h5>
        <%= password_field_tag :password %>
      </div>

      <%= submit_tag "Submit" %>

    <% end %>
  </div>
</div>